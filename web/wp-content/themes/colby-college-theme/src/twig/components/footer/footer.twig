{% import "icons.twig" as icons %}

{% if in_component_library %}
  {% set logo = '@logo' %}
  {% set button = '@button' %}
{% else %}
  {% set logo = 'logo.twig' %}
  {% set button = 'button.twig' %}
{% endif %}

<footer class="footer bg-indigo py-14 space-y-14">
  <div class="footer__inner md:grid md:grid-cols-12 gap-x-10 max-w-screen-2xl w-full px-5 my-0 mx-auto space-y-8 md:space-y-0">
    <div class="footer__left md:col-span-5 flex justify-between md:justify-start items-start md:space-x-8 lg:space-x-16 md:border-r border-indigo-900 border-solid">
      <a class="block hover:text-white hover:underline transition-all duration-200 ease-in-out" href="{{ address.url }}">{% include logo with {
        class: 'fill-white w-[125px] md:w-[100px]',
      } %}</a>
      <address class="footer__address font-body font-normal text-16 md:text-12 text-indigo-500 not-italic leading-140 space-y-2">
        {{ address.text }}
        <a class="block hover:text-white hover:underline transition-all duration-200 ease-in-out" href="tel:{{ phone }}">{{ phone }}</a>
      </address>
    </div>
    <div class="footer__right lg:col-start-7 md:col-span-6">
      <ul class="footer__links flex flex-wrap space-between pt-8 md:pt-0 pb-4 md:pb-0 border-y md:border-y-0 border-indigo-900 border-solid">
        {% for item in main %}
          <li class="flex-col basis-1/2 md:basis-1/2 lg:basis-1/4 font-body font-normal text-16 md:text-14 text-indigo-500 leading-130 mb-4">
            <a class="text-indigo-500 hover:text-white hover:underline transition-all duration-200 ease-in-out" href="{{ item.url }}">{{ item.title }}</a>
          </li>
        {% endfor %}
      </ul>
    </div>
  </div>
  <div class="footer__inner md:grid md:grid-cols-12 gap-x-10 max-w-screen-2xl w-full px-5 my-0 mx-auto">
    <div class="footer__bottom md:flex justify-between md:col-span-12 space-y-10 md:space-y-0">
      <ul class="footer__utility flex space-x-10">
        {% for item in utility %}
          <li class="font-body font-bold text-18 md:text-10 text-indigo-200 leading-140">
            <a class="flex items-center text-indigo-200 hover:text-white hover:underline transition-all duration-200 ease-in-out" href="{{ item.url }}">
              {{ icons.icon(item.title|lower, 'fill-canary w-4 md:w-3 h-4 md:h-3 mr-2 md:mr-1') }}
              {{ item.title }}
            </a>
          </li>
        {% endfor %}
      </ul>
      <div class="footer__connect flex space-between items-center">
        {% include button with {
          size: 'small',
          type: 'dark',
          url: 'https://news.colby.edu/newsletter/',
          title: 'Newsletter',
        }  %}
        <ul class="footer__socials flex space-x-4 ml-8">
          {% for item in social %}
            <li class="text-[0]">
              <a class="flex text-indigo-100" href="{{ item.platform.url }}">
                {{ icons.icon(item.platform.title|lower, 'fill-indigo-100 hover:fill-indigo-500 max-w-5 md:max-w-4 max-h-4 md:max-h-3.5 w-full transition-all duration-200 ease-in-out') }}
                <span class="sr-only">{{ item.platform.title }}</span>
              </a>
            </li>
          {% endfor %}
        </ul>
      </div>
    </div>
  </div>
</footer>