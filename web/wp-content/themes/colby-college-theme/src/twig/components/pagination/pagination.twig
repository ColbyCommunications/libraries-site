{% import "icons.twig" as icons %}

<div class="pagination flex items-center justify-between">
  <span class="pagination__text font-body font-normal text-12 leading-140 text-indigo-800">{{ text }}</span>

  <div class="inline-flex items-center h-8 px-5 py-0.5 bg-gray-100 rounded-md space-x-1">
    <a class="block p-2 font-body font-normal text-14 md:text-10 leading-140 text-indigo-800 hover:text-indigo hover:underline hover:bg-indigo-200 transition-all duration-200 ease-in-out" href="/">
      {{ icons.icon('small-arrow', 'w-1 fill-indigo-800') }}
    </a>
    <ul class="pagination__container inline-flex space-x-1">
      {% for page in pages %}
        <li class="pagination__item">
          <a class="block p-2 py-1 font-body font-normal text-14 md:text-10 leading-140 text-indigo-800 hover:text-indigo hover:underline hover:bg-indigo-200 transition-all duration-200 ease-in-out" href="{{ page }}">{{ loop.index }}</a>
        </li>
      {% endfor %}
    </ul>
    <a class="block p-2 font-body font-normal text-14 md:text-10 leading-140 text-indigo-800 hover:text-indigo hover:underline hover:bg-indigo-200 transition-all duration-200 ease-in-out" href="/">
      {{ icons.icon('small-arrow', 'w-1 fill-indigo-800 rotate-180') }}
    </a>
  </div>
</div>